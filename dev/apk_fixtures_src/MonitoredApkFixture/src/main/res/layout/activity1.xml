<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="API: URL.openConnection()"
      android:id="@+id/button_api"
      android:layout_alignParentTop="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:onClick="callAPIURLOpenConnection"/>

  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="API: Camera.open()"
    android:id="@+id/button_camera"
    android:layout_below="@+id/button_api"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:onClick="openCamera"
    android:layout_alignRight="@+id/button_api"
    android:layout_alignEnd="@+id/button_api"/>


  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Launch Activity 2"
    android:id="@+id/button_activity2"
    android:layout_below="@+id/button_camera"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:onClick="launchActivity2"
    android:layout_alignRight="@+id/button_camera"
    android:layout_alignEnd="@+id/button_camera"/>

  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Launch Home"
    android:id="@+id/button_home"
    android:layout_below="@+id/button_activity2"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignRight="@+id/button_activity2"
    android:layout_alignEnd="@+id/button_activity2"
    android:onClick="launchHome"/>
</RelativeLayout>
